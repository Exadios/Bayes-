# Bayes++ Jamfile - See Boost.build
# Project root.
#  The project root simply includes all the subprojects. The BayesFilter library
#  and examples.

project-root ;

subinclude BayesFilter ;
subinclude Simple ;
subinclude PV ;
subinclude QuadCalib ;


# Produce the BayesFilter static libraries in a convenient target location named "lib"
#   The debug build is given a "d" suffix, release "r" suffix
stage lib  :  <lib>BayesFilter/BayesFilter
    : <tag><debug>"d" <tag><release>"r"
    : debug release
;
